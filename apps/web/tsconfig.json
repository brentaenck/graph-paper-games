{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "*.d.ts"
  ],
  "exclude": [
    "**/*.test.*",
    "**/__tests__/**",
    "dist"
  ],
  "references": [
    { "path": "../../packages/framework" },
    { "path": "../../packages/shared" }
  ]
}