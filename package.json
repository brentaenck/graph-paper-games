{
  "name": "@gpg/root",
  "version": "0.1.0",
  "private": true,
  "description": "Graph Paper Games - Web-based suite of classic pencil-and-paper games",
  "keywords": [
    "games",
    "multiplayer",
    "graph-paper",
    "turn-based"
  ],
  "author": "Ben Enck",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @gpg/apps-web dev",
    "test": "pnpm -r test",
    "test:coverage": "pnpm --filter @gpg/framework test:coverage",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "release:prepare": "bash ./scripts/release.sh",
    "release:dry-run": "bash ./scripts/release.sh",
    "release:finalize": "echo 'Use: git checkout main && git merge --no-ff release/VERSION && git tag -a vVERSION -m Release version VERSION'"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "games/*"
  ]
}
